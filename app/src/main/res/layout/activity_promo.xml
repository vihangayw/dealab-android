<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.activity.PromoActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/_41sdp"
		android:background="@color/colorPrimary"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/back"
			android:layout_width="@dimen/_45sdp"
			android:layout_height="match_parent"
			android:paddingStart="@dimen/_10sdp"
			android:paddingEnd="@dimen/_10sdp"
			android:src="@drawable/ic_back" />

		<TextView
			android:id="@+id/title"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:ellipsize="end"
			android:fontFamily="@font/sanfranciscotext_medium"
			android:gravity="center"
			android:maxLines="1"
			android:text="@string/app_name"
			android:textColor="@color/colorWhite"
			android:textSize="@dimen/_12sdp" />

		<ImageView
			android:layout_width="@dimen/_45sdp"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:paddingStart="@dimen/_11sdp"
			android:paddingEnd="@dimen/_11sdp"
			android:src="@drawable/ic_fav" />

	</LinearLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="@dimen/_40sdp"
		android:layout_marginBottom="@dimen/_55sdp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<com.daimajia.slider.library.SliderLayout
				android:id="@+id/slider"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_190sdp"
				android:background="@color/transparent_black_hex_ee" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/slider"
				android:layout_marginStart="@dimen/_12sdp"
				android:layout_marginTop="@dimen/_10sdp"
				android:layout_marginEnd="@dimen/_12sdp"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:ellipsize="end"
					android:fontFamily="@font/sanfranciscotext_regular"
					android:gravity="center"
					android:maxLines="1"
					android:text="Start Day"
					android:textColor="@color/colorGray_"
					android:textSize="@dimen/_11sdp" />

				<TextView
					android:id="@+id/txt_start_day"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginTop="@dimen/_4sdp"
					android:layout_weight="1"
					android:ellipsize="end"
					android:fontFamily="@font/sanfranciscotext_medium"
					android:gravity="center"
					android:maxLines="1"
					android:textColor="@color/colorBlack"
					android:textSize="@dimen/_12sdp" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:ellipsize="end"
					android:layout_marginTop="@dimen/_7sdp"
					android:fontFamily="@font/sanfranciscotext_regular"
					android:gravity="center"
					android:maxLines="1"
					android:text="End Day"
					android:textColor="@color/colorGray_"
					android:textSize="@dimen/_11sdp" />

				<TextView
					android:id="@+id/txt_end_day"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginTop="@dimen/_4sdp"
					android:layout_weight="1"
					android:ellipsize="end"
					android:fontFamily="@font/sanfranciscotext_medium"
					android:gravity="center"
					android:maxLines="1"
					android:textColor="@color/colorBlack"
					android:textSize="@dimen/_12sdp" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:ellipsize="end"
					android:fontFamily="@font/sanfranciscotext_regular"
					android:gravity="center"
					android:maxLines="1"
					android:text="Note"
					android:layout_marginTop="@dimen/_7sdp"
					android:textColor="@color/colorGray_"
					android:textSize="@dimen/_11sdp" />

				<TextView
					android:id="@+id/txt_note"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginTop="@dimen/_4sdp"
					android:layout_weight="1"
					android:fontFamily="@font/sanfranciscotext_medium"
					android:textColor="@color/colorBlack"
					android:textSize="@dimen/_12sdp" />

			</LinearLayout>

		</RelativeLayout>

	</ScrollView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/_55sdp"
		android:layout_gravity="bottom"
		android:background="#ededed"
		android:orientation="horizontal"
		android:paddingStart="@dimen/_15sdp"
		android:paddingEnd="@dimen/_15sdp">

		<Button
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="@dimen/_5sdp"
			android:layout_weight="1"
			android:background="@drawable/btn_round_purple"
			android:fontFamily="@font/sanfranciscotext_semibold"
			android:onClick="navigate"
			android:scrollbarSize="@dimen/_12sdp"
			android:text="Navigate"
			android:textColor="@color/colorWhite" />

		<Button
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="@dimen/_5sdp"
			android:layout_weight="1"
			android:background="@drawable/btn_round_accent"
			android:fontFamily="@font/sanfranciscotext_semibold"
			android:onClick="share"
			android:scrollbarSize="@dimen/_12sdp"
			android:text="Share"
			android:textColor="@color/colorWhite" />

	</LinearLayout>

</android.support.design.widget.CoordinatorLayout>