<?xml version="1.0" encoding="utf-8"?>
<layer-list>
	<item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">

			<corners
				android:bottomRightRadius="@dimen/_1sdp"
				android:radius="@dimen/_30sdp" />

			<gradient
				android:angle="90"
				android:endColor="@color/Color_DarkViolet"
				android:startColor="@color/Color_OrangeRed"
				android:type="linear" />

			<size
				android:width="@dimen/_12sdp"
				android:height="@dimen/_12sdp" />

			<stroke
				android:width="2dip"
				android:color="@color/colorWhite" />

		</shape>
	</item>
	<item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">

			<corners
				android:bottomRightRadius="@dimen/_1sdp"
				android:radius="@dimen/_30sdp" />

			<size
				android:width="@dimen/_12sdp"
				android:height="@dimen/_12sdp" />

			<stroke
				android:width="1dip"
				android:color="@color/colorBlack" />

		</shape>
	</item>
</layer-list>